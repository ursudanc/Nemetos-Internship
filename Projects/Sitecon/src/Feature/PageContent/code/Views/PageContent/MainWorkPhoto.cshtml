@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecon.Feature.PageContent
@using Sitecon.Foundation.SitecoreHelperExtensions
@model Sitecon.Feature.PageContent.Models.MainWorkPhoto
<!--Work-->
<section id="recent-works">
  <div class="container">
    <div class="center">
      <h3>@Html.Sitecore().Field(Templates.MainWorkPhotos.Fields.Title.ToString(), Model)</h3>
      <p class="lead">@Html.Sitecore().Field(Templates.MainWorkPhotos.Fields.Text.ToString(), Model)</p>
    </div>
    <div class="gap"></div>
    <ul class="gallery col-4">
      <!--Item 1-->
      @foreach (var photo in Model.MainWorkPhotoList)
      {
      <li>
        <div class="preview">
          <img alt=" " src="@photo.WorkPhotoImageUrl">
          <div class="overlay">
          </div>
          <div class="links">
            <a data-toggle="modal" href="#modal-@photo.number"><i class="icon-eye-open"></i></a><a href="#"><i class="icon-link"></i></a>
          </div>
        </div>
        <div class="desc">
          <h5>@photo.WorkPhotoText</h5>
        </div>
        <div id="modal-@photo.number" class="modal hide fade">
          <a class="close-modal" href="javascript:;" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i></a>
          <div class="modal-body">
            <img src="@photo.WorkPhotoFullImageUrl"  width="100%" style="max-height:400px">
          </div>
        </div>
      </li>
      }
      <!--/Item 1-->
    </ul>
  </div>
</section>
<!--/Work-->